{
    "extends": "semistandard",
    "parser": "@babel/eslint-parser",
    "parserOptions": {
        "ecmaVersion": 2021,
        "sourceType": "module",
        "requireConfigFile": false
    },
    "env": {
        "es6": true,
        "browser": true,
        "mocha": true
    },
    "rules": {
        "indent": ["error", 4],
        "eol-last": "off",
        "no-trailing-spaces": "off",
        "spaced-comment": "off",
        "import/no-webpack-loader-syntax": "off"
    }
}